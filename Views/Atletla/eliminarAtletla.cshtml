@model MVCAppCRUDRazorCodeFirst.Models.Atletlas;

@{
    ViewData["Title"] = "Eliminar Atleta";
}

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2> Eliminar Atletla</h2>
        <form asp-controller="Atletla" asp-action="eliminarAtletla" method="post">

            <input asp-for="IdAtleta" type="hidden" />

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Eliminar</button>
                <a asp-controller="Atletla" asp-action="obtenerAtletlas" class="btn btn-warning">Volver</a>
            </div>

        </form>

    </div>

</div>
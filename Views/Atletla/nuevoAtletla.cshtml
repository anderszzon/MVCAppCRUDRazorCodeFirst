@model MVCAppCRUDRazorCodeFirst.Models.Atletlas;

@{
    ViewData["Title"] = "Nuevo Atleta";
}

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2> Crear Nuevo Atletla</h2>
        <form asp-controller="Atletla" asp-action="nuevoAtletla" method="post">
            <div class="mb-3">
                <label>Nombre Atletla</label>
                <input class="form-control" asp-for="AtletaName" type="text" />
            </div>

            <div class="mb-3">
                <label>Tipo de Atletla</label>
                <input class="form-control" asp-for="AtletaType" type="text" />
            </div>

            <div class="mb-3">
                <label>Fecha de Contrato</label>
                <input class="form-control" asp-for="FechaContrato" type="date" />
            </div>

            <div class="mb-3">
                <input class="form-check-input" asp-for="Activo" type="checkbox" id="chkActivo" />
                <label class="form-check-label" for="chkActivo">Activo</label>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Atletla" asp-action="obtenerAtletlas" class="btn btn-warning">Volver</a>
            </div>
        </form>

    </div>

</div>